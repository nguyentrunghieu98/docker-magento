#!/usr/bin/env bash
set -e

echo "ğŸ“¦ Installing mkcert root CA inside Docker container..."
bin/docker-compose exec -T -u root app mkcert -install

echo "ğŸ“¤ Exporting rootCA.pem from container to host..."
docker cp "$(bin/docker-compose ps -q app | awk '{print $1}')":/root/.local/share/mkcert/rootCA.pem .

echo "ğŸ” System password may be required to install certificate authority on host..."

# --- macOS ---
if [ "$(uname)" == "Darwin" ]; then
  echo "ğŸ§  Detected macOS. Installing root CA to system keychain..."

  sudo security add-trusted-cert -d -r trustRoot -k /Library/Keychains/System.keychain rootCA.pem

  echo "ğŸ“ Creating Firefox policy to trust system certificates..."
  echo '{"policies": {"Certificates": {"ImportEnterpriseRoots": true}}}' | sudo tee policies.json

  FIREFOX_FOUND=0
  # Check for installed Firefox versions
  for FFoxAppDir in \
    '/Applications/Firefox.app' \
    '/Applications/Firefox Developer Edition.app'
  do
    FFoxBin="$FFoxAppDir/Contents/MacOS/firefox-bin"
    if [[ -f "$FFoxBin" ]]; then
      echo "ğŸ¦Š Firefox found at: $FFoxAppDir"
      FIREFOX_FOUND=1

      # Apply policies.json
      DistDirectory="$FFoxAppDir/Contents/Resources/distribution"
      sudo mkdir -p "$DistDirectory"
      sudo cp policies.json "$DistDirectory/policies.json"
    fi
  done

  if [[ $FIREFOX_FOUND -ne 0 ]]; then
    echo "ğŸ“¥ Installing root CA for Firefox..."
    CertDirectory='/Library/Application Support/Mozilla/Certificates'
    sudo mkdir -p "$CertDirectory"
    sudo cp rootCA.pem "$CertDirectory/rootCA.pem"
  fi

  echo "ğŸ§¹ Cleaning up..."
  rm -f policies.json rootCA.pem

# --- Linux ---
else
  echo "ğŸ§  Detected Linux. Checking for libnss3-tools..."

  REQUIRED_PKG="libnss3-tools"
  if ! dpkg -s "$REQUIRED_PKG" &>/dev/null; then
    echo "ğŸ“¦ Package $REQUIRED_PKG is not installed. Installing..."
    if sudo apt-get update && sudo apt-get install -y "$REQUIRED_PKG"; then
      echo "âœ… Successfully installed $REQUIRED_PKG."
    else
      echo "âŒ Failed to install $REQUIRED_PKG. Exiting."
      exit 1
    fi
  else
    echo "âœ… $REQUIRED_PKG is already installed."
  fi

  certfile="rootCA.pem"
  certname="Root CA"

  echo "ğŸ” Searching for Firefox certificate stores (cert8.db)..."
  find ~ -name "cert8.db" -print0 | while IFS= read -r -d '' certDB; do
    certdir=$(dirname "$certDB")
    echo "â¡ï¸  Importing into DBM store at $certdir"
    certutil -D -n "$certname" -i "$certfile" -d dbm:"$certdir" 2>/dev/null || true
    certutil -A -n "$certname" -t "TCu,Cu,Tu" -i "$certfile" -d dbm:"$certdir"
  done

  echo "ğŸ” Searching for Firefox certificate stores (cert9.db)..."
  find ~ -name "cert9.db" -print0 | while IFS= read -r -d '' certDB; do
    certdir=$(dirname "$certDB")
    echo "â¡ï¸  Importing into SQL store at $certdir"
    certutil -D -n "$certname" -i "$certfile" -d sql:"$certdir" 2>/dev/null || true
    certutil -A -n "$certname" -t "TCu,Cu,Tu" -i "$certfile" -d sql:"$certdir"
  done

  echo "ğŸ“ Installing root CA to system-wide certificate store..."
  sudo cp "$certfile" /usr/local/share/ca-certificates/rootCA.crt
  sudo update-ca-certificates

  echo "âœ… Root CA installation complete."
fi
